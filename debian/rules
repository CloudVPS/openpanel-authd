#!/usr/bin/make -f


BUILD_ROOT=$(CURDIR)/debian/tmp
install:
trm -rf ${BUILD_ROOT}
tmkdir -p ${BUILD_ROOT}/var/opencore/tools
tinstall -m 750 -d ${BUILD_ROOT}/var/opencore/log
tmkdir -p ${BUILD_ROOT}/var/opencore/bin
tmkdir -p ${BUILD_ROOT}/var/opencore/sockets/authd
tcp -rf authd.app ${BUILD_ROOT}/var/opencore/bin/
tln -sf authd.app/exec ${BUILD_ROOT}/var/opencore/bin/authd
tcp -rf opencore-tools/* ${BUILD_ROOT}/var/opencore/tools/
tcp -f fcat/fcat ${BUILD_ROOT}/var/opencore/tools/
tmkdir -p ${BUILD_ROOT}/etc/init.d
tinstall -m 755 contrib/debian.init ${BUILD_ROOT}/etc/init.d/openpanel-authd

build:
t./configure
tmake
tmake -C fcat
binary-indep:

binary-arch binary: build install
	if [ -d debian/tmp ] ; then dh_install -a --sourcedir=debian/tmp ; fi
	dh_installdocs -a
	dh_installdeb -a
	dh_compress -a
	dh_fixperms -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

.PHONY: build binary binary-arch binary-indep clean install
